<Window x:Class="Zaharov_9_pr.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zaharov_9_pr"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Name="phonesList">
            <TextBlock FontWeight="Bold" TextDecorations="Underline" Text="Много нового текста"/>
            <ListBoxItem Background="LightGray">Мама мыла раму</ListBoxItem>
            <ListBoxItem>КГБ ПОУ АПТ</ListBoxItem>
            <ListBoxItem Background="LightGray">Здесь моя фамилия</ListBoxItem>
            <ListBoxItem>Номер практической работы</ListBoxItem>
            <ListBoxItem Background="LightGray">И еще много буков</ListBoxItem>
        </ListBox>

        <TextBlock x:Name="TextBlock" Grid.Row="1" Text="" Width="200" Height="40" VerticalAlignment="Top"/>
        <Button x:Name="Button" Content="Пуск" Grid.Row="1" Height="30" Click="Button_Click"/>
        <TextBlock x:Name="Schet" Grid.Row="1" Text="Количество символов" Width="200" Height="50" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
